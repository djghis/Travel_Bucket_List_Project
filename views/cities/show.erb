<h2><%= @city.name %></h2>

<table>
  <tr>
    <th>Date</th>
    <th>Photo</th>
    <th>Comment</th>
  </tr>
  <% for visit in @visits %>
  <tr>
    <td> <%= visit.visit_date %> </td>
    <td><img src="<%= visit.url %>" alt="photo" style="width:30px;height:30px;"></td>
    <td> <%= visit.comment %> </td>
    <td> <form action="/visits/<%= visit.id %>/delete" method="POST">
      <input class="visit" type="submit" value="delete" />
    </form> </td>
  </tr>
  <% end %>
</table>

<a href="/cities/<%= @city.id %>/edit">Edit city</a>

<p class="btn--wrapper">
  <a class="btn btn--action" href="/visits/new">Add a new visit</a>
</p>
