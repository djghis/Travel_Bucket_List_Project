<p>Countries</p>

<p class="btn--wrapper">
  <a class="btn btn--action" href="/countries/new">Add a new country</a>
</p>

<ul>
  <% for country in @countries %>
  <li>
  <p> <%= country.name %>
   <% if country.visited == 't' %>
      <img src="green_tick.png" alt="green_tick" style="width:30px;height:30px;">
      <form action="/countries/<%= country.id %>/delete" method="POST">
        <input class="country" type="submit" value="delete" />
      </form>
    <% else %>
      <img src="red_cross.png" alt="red_cross" style="width:30px;height:30px;">
      <form action="/countries/<%= country.id %>/delete" method="POST">
        <input class="country" type="submit" value="delete" />
      </form>
    </p>
   <% end %>
  </li>
  <% end %>
</ul>
