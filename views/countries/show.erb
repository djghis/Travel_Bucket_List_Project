<h1><%= @country.name %></h1>

<table>
  <tr>
    <th>City</th>
    <th>Visited?</th>
    <th>Delete</th>
  </tr>
  <% for city in @cities %>
  <tr>
    <td> <a href="/cities/<%= city.id %>"><%= city.name %></a> </td>
    <% if city.visited == 't' %>
       <td><img src="/green_tick.png" alt="green_tick" style="width:30px;height:30px;"></td>
     <% else %>
       <td><img src="/red_cross.png" alt="red_cross" style="width:30px;height:30px;"></td>
    <% end %>
    <td> <form action="/cities/<%= city.id %>/delete" method="POST">
      <input class="city" type="submit" value="delete" />
    </form> </td>
  </tr>
  <% end %>
</table>

<p class="btn--wrapper">
  <a class="btn btn--action" href="/cities/new">Add a new city</a>
</p>

<a href="/countries/<%= @country.id %>/edit">Edit country</a>
